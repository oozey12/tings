import string
import random


def random_email():
    user_request0 = int(input("how many characters do you want for your email?: "))
    email = ''
    for i in range(user_request0):
        email += random.choice(string.ascii_letters + string.digits)
    email += '@gmail.com'

    return email


def random_password():
    user_request = int(input("how long do you want your password to be?: "))
    password = ''
    for i in range(user_request):
        password += random.choice(string.ascii_letters + string.digits + string.punctuation)
    return password


def main():
    print(random_email())
    print(random_password())


if __name__ == '__main__':
    main()
print("------------------------------------------------------------------")
ask_again = input("Would you like to generate another email with a new password (y/n): ")
while ask_again == 'y':
    if ask_again == 'y':
        ask_again = input("Would you like to generate another email with a new password (y/n): ")


        def random_email():
            user_request0 = int(input("how many characters do you want for your email?: "))
            email = ''
            for i in range(user_request0):
                email += random.choice(string.ascii_letters + string.digits)
            email += '@gmail.com'

            return email


        def random_password():
            user_request = int(input("how long do you want your password to be?: "))
            password = ''
            for i in range(user_request):
                password += random.choice(string.ascii_letters + string.digits + string.punctuation)
            return password


        def main():

            print(random_email())
            print(random_password())


        if __name__ == '__main__':
            main()

        if ask_again != 'y':
            print("okay! bye!")
